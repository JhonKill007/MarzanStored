@model List<MarzanStored.Dtos.OrdenesDto>

@{
    ViewData["Title"] = "Search";
}
<div id="PlaceHolderHere"></div>
<div class="d-flex">
    <div class="col-md-5">
        <h1>Busqueda</h1>
        <button type="button" class="btn btn-success" data-toggle="ajax-modal" data-target="#createOrden" data-url="@Url.Action("Create")"> Crear una Orden </button>
    </div>
    <div class="col-md-5">
        <form asp-action="Search">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input placeholder="Buscar" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                Nombres
            </th>
            <th>
                Categoria
            </th>
            <th>
                Stock
            </th>
            <th>
                Fecha
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {

            <tr>

                <td>
                    @Html.DisplayFor(modelItem => i.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => i.Categoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => i.Cantidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => i.Fecha)
                </td>

            </tr>
        }
    </tbody>
</table>

